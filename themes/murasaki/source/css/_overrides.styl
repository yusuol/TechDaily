// Override style in Han.css
h-char.biaodian {
  font-family: 'Source Han Sans', sans-serif;

  &[unicode='2018'], // ‘ (U+2018)
  &[unicode='2019'], // ’ (U+2019)
  &[unicode='201c'], // “ (U+201C)
  &[unicode='201d']{ // ” (U+201D)
    font-family: inherit;
  }

  line-height: 1 !important;
}

h1, h2, h3, h4, h5, h6 {
  h-char.biaodian {
    font-family: 'Source Han Sans', sans-serif;
  }
}

h1 {
  font-size: 1.375rem; // 22px
}

h2 {
  font-size: 1.125rem; // 18px
}

h3 {
  font-size: 1rem; // 16px
}

h4, h5, h6 {
  font-size: 1rem; // 保持一致，或者更小一点也行
}

body, p {
  font-size: 1rem;  // 16px
  line-height: 1.6;
}


// Restore emphasis mark in Han.css
em:lang(ja),
em:lang(zh) {
  -moz-text-emphasis: initial;
  -webkit-text-emphasis: initial;
  text-emphasis: initial;
  -moz-text-emphasis-position: initial;
  -webkit-text-emphasis-position: initial;
  text-emphasis-position: initial;
  font-style: italic;
  border-bottom: initial;
  padding-bottom: initial;
  border-bottom-width: initial;
  padding-bottom: initial;
}

// Override style in highlight.js
.hljs {
  background-color-themed: 'code-bg';
}

.post-content img
  border-radius: 8px

// Third-party services
#dsqjs {
  header, footer, section {
    * {
      font-family: 'Source Han Sans', sans-serif;
      color-themed: 'text';
    }

    a:not(.dsqjs-load-more) {
      color-themed: 'primary';

      &:hover {
        text-decoration: underline;
      }
    }
  }

  header {
    border-bottom: none;

    .dsqjs-tab-active > span:after {
      background-color: $color-primary !important;

      +when-dark() {
        background-color: $color-primary-dark !important;
      }
    }

    .dsqjs-order {
      margin-bottom: 0;
    }
  }

  .dsqjs-meta {
    font-family: 'Source Han Sans', sans-serif;
  }
}
